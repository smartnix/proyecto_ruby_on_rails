<h1><%= @articulos.titulo %></h1>
<% unless @articulos.user.nil? %>
	<p>
		Escrito por: <%= @articulos.user.email%>	
	</p>
	
<%end%>
<div class="field">
	<% @articulos.categories.each do |category|%>
		<%= link_to category.name, category, style:"color:#{category.color}"%>
	<% end -%>
</div>
<div class="field">
	<%= image_tag @articulos.cover.url(:thumb)%>
</div>
<p>
	visitas: <%= @articulos.visits_count %>
	</p>	
<div><%= @articulos.body.html_safe %></div>
<div>
	
</div>
<div>
	<h3>Comentarios</h3>
		<%= render "comments/form"%>				

	<ul id="comments-box">
		<% @articulos.comments.each do |comment| %>
		<li>
			<%= comment.body%> - <%= comment.user.email%>
		</li>
		<%end%>
	</ul>
</div>
<div>
	<%= link_to "Editar", edit_articulo_path(@articulos) %>
</div>