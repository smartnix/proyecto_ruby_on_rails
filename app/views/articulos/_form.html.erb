<%= form_for(@articulos) do |f| %>
		<% @articulos.errors.full_messages.each do |message| %>
		<div class="be-red" white>
			*<%= message %>
		</div>
		<% end %>
		<div class="field">
			<%= f.text_field :titulo, placeholder: "Titulo", class:"form-control"%>
		</div>
		<div class="field">
			Portada: <%= f.file_field :cover %>
		</div>
		<div class="field">
			
			
				<%= f.text_area :body, id:"wysiwyg" %>
			

		</div>
		<div class="field">
			<label>Categor√≠as</label>
			<% @categories.each do |category|%>
				<div class="field">
					<%= check_box_tag "categories[]", category.id %> <%= category.name%>
				</div>
			<% end -%>
		</div>
		<div class="field">
			<%= f.submit "Guardar", class:"btn be-red white"%>
		</div>
	<%end%>

	<script>
		$("#wysiwyg").froalaEditor({
			height: 300
		});
	</script>
